SELECT MAX(CNT_CLIENT)
FROM DECOMPTE_PARAM,
     CONTRAT,
     CLIENT
WHERE DPA_LANGUE = '1'
  AND DPA_NUM = '321'
  AND DPA_CODE = CNT_SOCIETE
  AND DPA_SOCIETE = '*'
  AND INSTR(','||DPA_CHAINE1||',', ','||:B2 ||',') <> 0
  AND CNT_CLIENT = CLI_CODE
  AND CNT_CLE1 = '0'
  AND CLI_CODE_GEST = 'ITF'
  AND CLI_PROF_LIB = :B1